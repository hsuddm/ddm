<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1920"
    tools:context="login.LoginActivity" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150" />

    <ImageView
        android:id="@+id/iv_dongdong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="678"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="401"
        android:orientation="vertical"
        android:weightSum="401" >

        <EditText
            android:id="@+id/et_idaddress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="117"
            android:hint="E-Mail"
            android:lines="1"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textScaleX="0.9" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="117"
            android:hint="Password"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textScaleX="0.9" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25" />

        <TextView
            android:id="@+id/tv_login_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="117"
            android:gravity="center"
            android:text="로그인"
            android:textColor="#ffffff"
            android:textScaleX="0.9"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="531" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_memjoin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/iv_question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right" />
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100" />

</LinearLayout>